pipeline {
    agent any

    tools {
        maven 'maven'
    }

    stages {
        stage('GitHub Validation') {
            steps {
                git branch: 'main', url: 'https://github.com/Brahmamk3/demo-repo.git'
            }
        }

        stage('Compiling the Code') {
            steps {
                sh 'mvn compile'
            }
        }

        stage('Testing the Code') {
            steps {
                sh 'mvn test'
            }
        }

        stage('QA of the Code') {
            steps {
                sh 'mvn pmd:pmd'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage("deploy the project on tomcat"){
            steps{
                ansiblePlaybook credentialsId: 'Ramssh', disableHostKeyChecking: true, installation: 'ansible', inventory: 'webserver.ini', playbook: 'tomcat-install-deploy.yml', vaultTmpPath: ''
            }
        }
    }
}
